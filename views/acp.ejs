<% include ./partials/header %>

  <% users.forEach(function(user) { %>
    <div class="row bg-dark">
      <div class="col-md-2 col-xs-12">
        <div class="thumbnail small">
          <img src="<%=user.avatar%>" alt="user profile image">
        </div>
      </div>
      <div class="col-md-3 col-xs-12">
        <h3 class="profile-username"><%=user.firstName + " " + user.lastName %></h3>
        <p class="profile-username"><%=user.email %></p>
        <div class="profile-username"><%=user.username%></div>
      </div>
      <div class="col-md-4 col-xs-12">
        <h4>Campgrounds posted by <%= user.username %></h4>
        <% if(user.campgrounds.length < 1) { %>
          <h6 class="mt-4 ml-2"><em>No campgrounds submitted yet...</em></h6>
        <% } else { %>
          <% user.campgrounds.forEach(function(campground) { %>
            <p class="user-campground-list">
              <a href="/campgrounds/<%= campground.id %>">
                <%= campground.name %>
              </a>
            </p>
          <% }) %>
        <% } %>
      </div>
      <div class="col-md-3 col-xs-12">
        <div>
          <% if(!user.isAdmin) { %>
            <label><input type="checkbox" name="makeAdmin">Admin</label>
            <form action="/user/<%=user.id%>?_method=PUT" method="post">
                <button class="btn btn-warning">Update</button>
            </form>
            <br>
            <form action="/user/<%=user.id%>?_method=DELETE" method="POST">
              <div class="form-group">
                  <button class="btn btn-danger">Delete</button>
              </div>
            </form>
          <% } else { %>
            <label><input type="checkbox" name="makeAdmin" disabled checked>Admin</label>
          <% } %>
        </div>
      </div>
    </div>
    <br>
  <% }); %>

<% include ./partials/footer %>