<% include ../partials/header %>

<div class="row">
    <h1 class="text-center">Edit Comment</h1>
    <div class="form-size">
        <form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="comment"></label>
                <textarea id="comment" class="form-control" type="text" name="comment[text]" value="<%=comment.text%>"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a class="btn btn-sm btn-success" href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>