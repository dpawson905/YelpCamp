<% include ../partials/header %>

<header class="jumbotron">
    <div class="container">
        <h1>Welcome to Let&#39;s Camp!</h1>
        <p>View our hand-picked campgrounds from all over the world</p>
        <p>
            <a class="btn btn-primary btn-lg" href="/campgrounds/new"><i class="fa fa-plus fa-lg" aria-hidden="true"></i> Add a New Campground</a>
        </p>
    </div>
</header>
    <div class="row text-center flex">
        <div class="col-md-12">
            <% if(noMatch) { %>
                <h3><%= noMatch %></h3>
                <p>
                    <form class="form-inline" action="/campgrounds" method="GET">
                        <div class="form-group">
                            <input type="text" name="search" placeholder="Campground Search" class="form-control">
                            <input type="submit" value="Search" class="btn btn-default">
                        </div>
                    </form>
                </p>
            <% } %>
        </div>
    </div>
    <div class="row flex text-center">
    <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-12 col-xs-12">
            <div class="thumbnail">
                <img class="img-resize img-responsive" src="<%= campground.image %>">
                <div class="caption">
                    <h4><%= campground.name %></h4>
                </div>
                <p>
                    <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">More Info</a>
                </p>
            </div>
        </div>
    <% }); %>
</div>

<% include ../partials/footer %>